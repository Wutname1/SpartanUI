<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <!-- Main Window Frame -->
    <Frame name="LibsDisenchantAssistMainFrame" parent="UIParent" movable="true" enableMouse="true" clampedToScreen="true" toplevel="true" frameStrata="DIALOG" hidden="true">
        <Size x="450" y="600"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>


        <Frames>
            <!-- Title Bar -->
            <Button name="$parentTitleBar" enableMouse="true">
                <Size x="418" y="32"/>
                <Anchors>
                    <Anchor point="TOP" y="-5"/>
                </Anchors>
                <Scripts>
                    <OnMouseDown>
                        if button == "LeftButton" then
                            self:GetParent():StartMoving()
                        end
                    </OnMouseDown>
                    <OnMouseUp>
                        self:GetParent():StopMovingOrSizing()
                    </OnMouseUp>
                </Scripts>
            </Button>

            <!-- Close Button -->
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-5" y="-5"/>
                </Anchors>
            </Button>

            <!-- Options Button -->
            <Button name="$parentOptionsButton">
                <Size x="80" y="22"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="15" y="-45"/>
                </Anchors>
                <NormalTexture file="Interface\Buttons\UI-Panel-Button-Up"/>
                <PushedTexture file="Interface\Buttons\UI-Panel-Button-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Panel-Button-Highlight" alphaMode="ADD"/>
                <ButtonText name="$parentText" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </ButtonText>
            </Button>

            <!-- Disenchant Button -->
            <Button name="$parentDisenchantButton">
                <Size x="100" y="22"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-15" y="-45"/>
                </Anchors>
                <NormalTexture file="Interface\Buttons\UI-Panel-Button-Up"/>
                <PushedTexture file="Interface\Buttons\UI-Panel-Button-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Panel-Button-Highlight" alphaMode="ADD"/>
                <ButtonText name="$parentText" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </ButtonText>
            </Button>


            <!-- Options Panel Frame -->
            <Frame name="$parentOptionsPanel" hidden="true">
                <Size x="410" y="120"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-95"/>
                </Anchors>


                <Frames>
                    <!-- Today Exclude Checkbox -->
                    <CheckButton name="$parentExcludeTodayCheck" inherits="InterfaceOptionsCheckButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" x="10" y="-10"/>
                        </Anchors>
                    </CheckButton>

                    <!-- Higher iLvl Exclude Checkbox -->
                    <CheckButton name="$parentExcludeHigherIlvlCheck" inherits="InterfaceOptionsCheckButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" x="10" y="-35"/>
                        </Anchors>
                    </CheckButton>

                    <!-- Gear Sets Exclude Checkbox -->
                    <CheckButton name="$parentExcludeGearSetsCheck" inherits="InterfaceOptionsCheckButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" x="10" y="-60"/>
                        </Anchors>
                    </CheckButton>

                    <!-- Warbound Exclude Checkbox -->
                    <CheckButton name="$parentExcludeWarboundCheck" inherits="InterfaceOptionsCheckButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" x="210" y="-10"/>
                        </Anchors>
                    </CheckButton>

                    <!-- BOE Exclude Checkbox -->
                    <CheckButton name="$parentExcludeBOECheck" inherits="InterfaceOptionsCheckButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" x="210" y="-35"/>
                        </Anchors>
                    </CheckButton>

                    <!-- Min iLvl Slider -->
                    <Slider name="$parentMinIlvlSlider" inherits="OptionsSliderTemplate">
                        <Size x="150" y="17"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="20" y="-90"/>
                        </Anchors>
                    </Slider>

                    <!-- Max iLvl Slider -->
                    <Slider name="$parentMaxIlvlSlider" inherits="OptionsSliderTemplate">
                        <Size x="150" y="17"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="220" y="-90"/>
                        </Anchors>
                    </Slider>
                </Frames>
            </Frame>

            <!-- Scroll Frame for Items -->
            <ScrollFrame name="$parentScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Size x="400" y="350"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-225"/>
                </Anchors>

                <ScrollChild>
                    <Frame name="$parentItemList">
                        <Size x="380" y="1"/>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
        </Frames>

        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentTitle" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="TOP" y="-16"/>
                    </Anchors>
                </FontString>
                
                <!-- Item Count Display -->
                <FontString name="$parentItemCount" inherits="GameFontHighlight">
                    <Anchors>
                        <Anchor point="TOP" y="-75"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Scripts>
            <OnLoad>
                LibsDisenchantAssistMainFrame_OnLoad(self)
            </OnLoad>
            <OnShow>
                LibsDisenchantAssistMainFrame_OnShow(self)
            </OnShow>
        </Scripts>
    </Frame>

    <!-- Item Button Template -->
    <Button name="LibsDisenchantAssistItemButtonTemplate" virtual="true">
        <Size x="380" y="20"/>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentBackground">
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                        <Anchor point="BOTTOMRIGHT"/>
                    </Anchors>
                    <Color r="0" g="0" b="0" a="0.5"/>
                </Texture>
            </Layer>

            <Layer level="ARTWORK">
                <Texture name="$parentIcon">
                    <Size x="16" y="16"/>
                    <Anchors>
                        <Anchor point="LEFT" x="2" y="0"/>
                    </Anchors>
                </Texture>

                <FontString name="$parentName" inherits="GameFontNormalSmall">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentIcon" x="4" y="0"/>
                    </Anchors>
                </FontString>

                <FontString name="$parentIlvl" inherits="GameFontNormalSmall">
                    <Anchors>
                        <Anchor point="RIGHT" x="-80" y="0"/>
                    </Anchors>
                </FontString>

                <FontString name="$parentDate" inherits="GameFontNormalSmall">
                    <Anchors>
                        <Anchor point="RIGHT" x="-10" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Scripts>
            <OnEnter>
                LibsDisenchantAssistItemButton_OnEnter(self)
            </OnEnter>
            <OnLeave>
                GameTooltip:Hide()
            </OnLeave>
        </Scripts>
    </Button>

</Ui>